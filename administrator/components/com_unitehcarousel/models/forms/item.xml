<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/administrator/components/com_unitehcarousel/models/fields">
	<fieldset>
		<field name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			size="10"
			default="0"
			readonly="true"
			class="readonly"
		/>
		
		<field name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description="JGLOBAL_TITLE"
			class="inputbox"
			size="30"
			default="Item"
		 />

		 <field name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			class="inputbox"
			size="30"
			default="slide"
		/>

		 <field name="sliderid"
			type="slider"
			label="COM_UNITEHCAROUSEL_SLIDER"
			description=""
		/>
		 
		<field id="published"
			name="published"
			type="list"
			label="JGLOBAL_STATE"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>			
		</field>
		
		<field name="checked_out"
			type="hidden"
			filter="unset"
		/>

		<field name="checked_out_time"
			type="hidden"
			filter="unset"
		/>
			
	</fieldset>
	
	
	<fields name="params">
		
		<fieldset name="optional" label="Optional">
			
			<field name="slide_transition" 
				type="list"
				default="slide" 
				label="COM_UNITEHCAROUSEL_SLIDE_TRANSITION" 
				description="COM_UNITEHCAROUSEL_TRANSITION_DESC"
				multiple="true"
				>
			  <option value="slide">Slide</option>
			  <option value="fade">Fade</option>
			  <option value="fade2">Something</option>
			</field>		
		
			<field name="image"
				type="media"
				label="COM_UNITEHCAROUSEL_IMAGE"
				description="COM_UNITEHCAROUSEL_IMAGE"
				class="input_url"
				required="true"
			/>
			
			<field name="activate_link" 
				   type="radio" 
				   default="no"
				   class="radio_small"
				   label="COM_UNITEHCAROUSEL_ACTIVATE_LINK"
				   description="">
					  <option value="no">No</option>
					  <option value="yes">Yes</option>
			</field>				
			
			<field name="link" 
					type="text"
					label="COM_UNITEHCAROUSEL_LINK"
					description=""
					class="inputbox_big"
					size="30"
					default=""
		    />
		    
			<field name="link_open_in" 
				   type="radio" 
				   class="radio_wide"
				   default="new" 
				   label="COM_UNITEHCAROUSEL_LINK_OPEN_IN" 
				   description="">
					  <option value="new">New Window</option>
					  <option value="same">Same Window</option>
			</field>				
			
		</fieldset>		
			
	</fields>
</form>